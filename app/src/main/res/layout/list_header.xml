<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xpet.fresh_pet.ListActivity">



    <!--下拉菜单-->
    <com.lqr.dropdownLayout.LQRDropdownLayout
        android:id="@+id/dl"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/ll_search"
        app:ddl_item_text_gravity="center"
        app:ddl_list_max_height="250dp"
        />

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/dl"
        android:id="@+id/rv_list_header"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"/>





</RelativeLayout>
