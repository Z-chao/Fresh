<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xpet.fresh_pet.DetailActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <com.youth.banner.Banner
                    android:id="@+id/detail_banner"
                    android:layout_width="match_parent"
                    android:layout_height="250dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@color/colorPrimary"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_back"
                            android:layout_width="40dp"
                            android:scaleType="center"
                            android:layout_height="match_parent"
                            android:src="@mipmap/back" />

                        <View

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/iv_share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/fenxiang" />
                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dp"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_detail_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_detailleft"
                        android:text="拉布拉多|宠物级|2只|(1MM1DD)|2个月零12天"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/tuan" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="30dp"
                        android:src="@mipmap/huo" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_detailleft"

                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/tv_yimiao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已疫苗|已驱虫"
                        android:textColor="#999999"
                        android:textSize="12sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_detailleft"
                        android:text="15000 - 15888"
                        android:textColor="#f48939"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="元/只"
                        android:textColor="#999999"
                        android:textSize="9sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:src="@mipmap/eys" />

                    <TextView
                        android:id="@+id/tv_looknum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="7dp"
                        android:text="879"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="11dp"
                        android:text="17.04.02"
                        android:textSize="10sp" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/dp_detailleft"
                    android:layout_marginTop="10dp"
                    android:text="鲜宠官方保障"
                    android:textColor="#000000"
                    android:textSize="14sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="17dp"
                        android:layout_marginRight="11dp"
                        android:layout_weight="1"
                        android:src="@mipmap/detail1" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="17dp"
                        android:layout_marginRight="11dp"
                        android:layout_weight="1"
                        android:src="@mipmap/detail2" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="17dp"
                        android:layout_marginRight="11dp"
                        android:layout_weight="1"
                        android:src="@mipmap/detail3" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="17dp"
                        android:layout_marginRight="11dp"
                        android:layout_weight="1"
                        android:src="@mipmap/detail4" />


                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:background="@color/colorWhite"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/jianjie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_detailleft"
                    android:layout_marginTop="13dp"
                    android:text="宠物简介"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/xian"
                    android:layout_below="@+id/jianjie"
                    android:background="#dedede"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="@dimen/dp_detailleft"
                    android:layout_marginRight="@dimen/dp_detailleft"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <ImageView
                    android:id="@+id/iv_pingji"
                    android:src="@mipmap/chongwuji"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"

                android:gravity="center_vertical"
                android:background="@color/colorWhite"

                android:layout_height="wrap_content">

                <ImageView

                    android:layout_marginLeft="@dimen/dp_detailleft"
                    android:src="@mipmap/taoxin"
                    android:layout_marginRight="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView

                    android:text="狗狗品级 : "
                    android:textSize="11sp"
                    android:textColor="#999999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_pingji"

                    android:text="宠物级"
                    android:textSize="11sp"
                    android:textColor="#999999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingTop="6dp"
                android:gravity="center_vertical"
                android:background="@color/colorWhite"

                android:layout_height="wrap_content">

                <ImageView

                    android:layout_marginLeft="@dimen/dp_detailleft"
                    android:src="@mipmap/taoxin"
                    android:layout_marginRight="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="出生日期 : "
                    android:textColor="#999999"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="2017.01.05"
                    android:textColor="#999999"
                    android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="15dp"
                android:paddingTop="6dp"
                android:background="@color/colorWhite"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="@dimen/dp_detailleft"
                    android:src="@mipmap/taoxin"
                    android:layout_marginRight="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="疫苗情况 : "
                    android:textColor="#999999"
                    android:textSize="11sp"
                    />

                <TextView
                    android:id="@+id/tv_yimiaoor"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="已疫苗"
                    android:textColor="#999999"
                    android:textSize="11sp" />


                <ImageView

                    android:layout_marginLeft="35dp"
                    android:src="@mipmap/taoxin"
                    android:layout_marginRight="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="驱虫情况 : "
                    android:textColor="#999999"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_quchong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="已驱虫"
                    android:textColor="#999999"
                    android:textSize="11sp" />


            </LinearLayout>
            <!--更多描述-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"
                android:background="@color/colorWhite"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:text="更多描述"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="@dimen/dp_detailleft"
                    android:layout_marginBottom="10dp"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/dp_detailleft"
                    android:layout_marginRight="@dimen/dp_detailleft"
                    android:background="#dedede"
                    android:layout_height="1dp" />

                <TextView
                    android:id="@+id/tv_more"
                    android:text="asdadasdassssddddddddddddddddddddddddddddddddddddddddddddddds"
                    android:textSize="11sp"
                    android:layout_marginLeft="@dimen/dp_detailleft"
                    android:layout_marginRight="@dimen/dp_detailleft"
                    android:textColor="#999999"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!--相关推荐-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@color/colorWhite"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:text="相关推荐"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="@dimen/dp_detailleft"
                    android:layout_marginBottom="10dp"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/dp_detailleft"
                    android:layout_marginRight="@dimen/dp_detailleft"
                    android:background="#dedede"
                    android:layout_height="1dp" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_detail"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:id="@+id/linearLayout">


        <LinearLayout
            android:id="@+id/ll_share"
            android:background="@color/colorWhite"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <View

                android:background="#f48a39"
                android:layout_width="match_parent"
                android:layout_height="1dp" />


            <ImageView
                android:layout_marginTop="8dp"
                android:layout_gravity="center_vertical"

                android:layout_width="90dp"
                android:src="@mipmap/share1"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="12sp"
                android:textColor="#999999"
                android:text="分享"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_dingzhi"
            android:text="定制"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:background="#f48a39"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_kefu"
            android:text="在线客服"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:background="#f4393a"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />





    </LinearLayout>
</RelativeLayout>
